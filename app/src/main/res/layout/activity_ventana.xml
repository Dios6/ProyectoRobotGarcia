<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#e9f5f8">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="402dp"
        android:layout_height="600dp"
        android:layout_margin="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:fontFamily="sans-serif-black"
            android:text="Robots usados"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="33sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#add8e6"
            app:cardCornerRadius="16dp">


            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:gravity="left"
                android:src="@drawable/arduinopng" />

            <LinearLayout
                android:layout_width="395dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Registro del día"
                        android:textAlignment="center"
                        android:textColor="#fcffff"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="09 - 09 - 2024"
                        android:textAlignment="center"
                        android:textColor="#fcffff"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/radioButton1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Verificado"
                        android:textColor="#fcffff" />
                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#add8e6"
            app:cardCornerRadius="16dp">


            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:gravity="left"
                android:src="@drawable/arduinorosao" />

            <LinearLayout
                android:layout_width="395dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Registro del día"
                        android:textAlignment="center"
                        android:textColor="#fcffff"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="15 - 09 - 2024"
                        android:textAlignment="center"
                        android:textColor="#fcffff"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/radioButton3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Verificado"
                        android:textColor="#fcffff" />
                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#add8e6"
            app:cardCornerRadius="16dp">


            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:gravity="left"
                android:src="@drawable/arduinorosao" />

            <LinearLayout
                android:layout_width="395dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Registro del día"
                        android:textAlignment="center"
                        android:textColor="#fcffff"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="04 - 10 - 2024"
                        android:textAlignment="center"
                        android:textColor="#fcffff"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/radioButton4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Verificado"
                        android:textColor="#fcffff" />
                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#add8e6"
            app:cardCornerRadius="16dp">


            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:gravity="left"
                android:src="@drawable/arduinopng" />

            <LinearLayout
                android:layout_width="395dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Registro del día"
                        android:textAlignment="center"
                        android:textColor="#fcffff"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="16 - 10 - 2024"
                        android:textAlignment="center"
                        android:textColor="#fcffff"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/radioButton5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Verificado"
                        android:textColor="#fcffff" />
                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/botonVol"
            android:layout_width="167dp"
            android:layout_height="46dp"
            android:backgroundTint="#3590ae"
            android:onClick="onClickAcceso"
            android:text="Volver"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.065"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/botonVid"
            android:layout_width="167dp"
            android:layout_height="46dp"
            android:backgroundTint="#3590ae"
            android:onClick="onClickVid"
            android:text="Videos"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.934"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>